{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "src/*": ["./src/*"]
        },
        "jsx": "react-jsx",
        "lib": ["ESNext", "DOM"]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/index.js",
        "__tests__/**/*.ts",
        "__tests__/**/*.tsx",
        "/assets/**/*"
    ],
    "exclude": ["node_modules"]
}
